{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": [
    "standard"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "describe": true,
    "test": true,
    "expect": true,
    "beforeEach": true,
    "afterEach": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prefer-const": [1, "always"],
    "semi": [
      1,
      "always"
    ]
  }
}